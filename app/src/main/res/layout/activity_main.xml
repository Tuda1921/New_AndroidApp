<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dropdown for City Selection -->
<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/city_spinner"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:prompt="@string/select_city" />

    <!-- Button to Fetch Weather -->

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/fetch_weather_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn" />
</LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/namecity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên thành phố"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="419dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:src="@drawable/status" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nhiệt độ"
        android:textColor="#f20"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Trạng thái"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:src="@drawable/do_am" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Độ ẩm"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:src="@drawable/may" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Mây"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="104dp"
                android:src="@drawable/gio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Gió"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thứ, ngày tháng năm"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
    <Button
        android:id="@+id/forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Dự báo 7 ngày tiếp theo"
        android:textSize="20sp"/>

</LinearLayout>
